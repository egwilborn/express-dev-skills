<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Express Developer Skills</title>
  </head>
  <body>
    <a href="/">Home</a>
    <h1>Express Developer Skills</h1>
    <a href="/skills/new">Add a New Skill</a>
    <ul>
      <% skills.forEach(function(skill) { %>
      <li>
        <form
          action="/skills/<%= skill.id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>

        <a href="/skills/<%=skill.id%>"><%= skill.todo %></a>
        - <%= skill.done ? 'done' : 'not done' %> <%});%>
      </li>
    </ul>
  </body>
</html>
